<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Northernlion Database - @ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <environment include="Development">
        <link rel="stylesheet" href="~/css/src/forms.css" />
        <link rel="stylesheet" href="~/css/src/global.css" />
        <link rel="stylesheet" href="~/css/src/table.css" />
        <link rel="stylesheet" href="~/css/src/video-list.css" />
    </environment>
    <environment include="Production">
        <link rel="stylesheet" href="~/css/dist/bundle.min.css" />
    </environment>
</head>
<body>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    @RenderSection("Scripts", required: false)
</body>
</html>
