@inject Microsoft.AspNetCore.Identity.UserManager<Microsoft.AspNetCore.Identity.IdentityUser> userManager

@{
    ViewData["Title"] = "Username Change";

    var user = await userManager.GetUserAsync(User);
    var userName = user?.UserName ?? string.Empty;
}

@model ChangeUsernameModel

<h1>Username Change</h1>

@if (!string.IsNullOrWhiteSpace(userName))
{
    <p>
        Your current username is: "@userName".
    </p>
}

<form method="post">
    <section class="myaccount-grid">
        <div>
            <label asp-for="NewUsername"></label>
        </div>
        <div>
            <input type="text" asp-for="NewUsername" data-required />
            <div class="error-message"></div>
        </div>
        <div class="width-two">
            <button type="submit">Change Username</button>
        </div>
    </section>
</form>



@section Scripts {
    <script src="~/js/dist/runtime.min.js"></script>
    <script src="~/js/dist/aspnetcore_formvalidation.min.js"></script>
}
